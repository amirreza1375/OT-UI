<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="#000"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_alignParentTop="true"
        android:id="@+id/optionHolder"
        android:background="#22D8D8D8"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/backImg"
            android:tint="#fff"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_width="28dp"
            android:layout_height="28dp"/>

        <TextView
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:id="@+id/imageNameTxt"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_weight="1"
            android:text="name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:tint="#fff"
            android:layout_width="28dp"
            android:layout_height="28dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/bottomOptionHolder"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/goToImageBtn"
            android:textColor="#C8FFFFFF"
            android:text="Ir al archivo de imagen"
            android:background="@drawable/image_btn_back"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>