<?xml version="1.0" encoding="utf-8"?><LinearLayout    android:background="@drawable/checklist_item_back"    android:layout_marginTop="16dp"    android:orientation="vertical"    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"    android:layout_height="match_parent">    <TextView        android:textColor="#161616"        android:textSize="15sp"        android:id="@+id/title"        android:layout_width="match_parent"        android:layout_height="wrap_content" />    <ImageView        android:layout_marginTop="8dp"        android:id="@+id/image"        android:layout_width="match_parent"        android:layout_height="200dp" />    <LinearLayout        android:orientation="vertical"        android:id="@+id/text_linear"        android:layout_width="match_parent"        android:layout_height="wrap_content">    </LinearLayout></LinearLayout>